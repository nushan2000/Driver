<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Driver" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/action</item>
        <!-- Set the status bar color -->
        <item name="android:statusBarColor">#F7D9C4</item>
        <!-- Set the navigation bar color -->
        <item name="android:navigationBarColor">#F7D9C4</item>
        <!-- Set the text color of action bar title -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Set the text color of action bar menu items -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- Overlay style for toolbar and navigation bar -->
    <style name="OverlayTheme" parent="">
        <!-- Set the color of toolbar and navigation bar icons -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- Apply the overlay to the toolbar -->
    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/OverlayTheme</item>
    </style>

    <!-- Apply the overlay to the navigation bar -->
    <style name="NavigationBarTheme">
        <item name="android:theme">@style/OverlayTheme</item>
    </style>

    <!-- Your app theme -->
    <style name="Theme.Driver" parent="Base.Theme.Driver" />

    <style name="Theme.Driver.Fullscreen" parent="Theme.Driver">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Driver.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
